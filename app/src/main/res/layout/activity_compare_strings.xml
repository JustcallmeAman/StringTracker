<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompareStrings">

    <TextView
        android:id="@+id/stringLableTV2"
        android:layout_width="177dp"
        android:layout_height="23dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="17dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/stringLableTV1"
        app:layout_constraintTop_toBottomOf="@+id/spinnerString2" />

    <Spinner
        android:id="@+id/spinnerString2"
        android:layout_width="412dp"
        android:layout_height="40dp"
        android:layout_marginTop="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerInstrumentTypes" />

    <Spinner
        android:id="@+id/spinnerInstrumentTypes"
        android:layout_width="412dp"
        android:layout_height="40dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStringCompare" />

    <Spinner
        android:id="@+id/spinnerString1"
        android:layout_width="412dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerInstrumentTypes" />

    <TextView
        android:id="@+id/textViewStringCompare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="31dp"
        android:text="Select Strings to Compare"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stringStatsTV2"
        android:layout_width="190dp"
        android:layout_height="148dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/stringStatsTV1"
        app:layout_constraintTop_toBottomOf="@+id/spinnerString2" />

    <TextView
        android:id="@+id/stringStatsTV1"
        android:layout_width="190dp"
        android:layout_height="148dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerString2" />

    <TextView
        android:id="@+id/textViewGraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="8dp"
        android:text="View Graphs"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stringStatsTV2" />

    <Button
        android:id="@+id/buttonProjection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="141dp"
        android:layout_marginTop="11dp"
        android:text="Projection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGraph" />

    <Button
        android:id="@+id/buttonIntonation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="8dp"
        android:text="Intonation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonProjection" />

    <Button
        android:id="@+id/buttonTone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="7dp"
        android:text="Tone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonIntonation" />

     <Button
        android:id="@+id/buttonRet3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#A80A0A"
        android:backgroundTintMode="add"
        android:text="Return"
        android:textSize="18sp"
        app:iconTint="#A80A0A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/stringLableTV1"
        android:layout_width="177dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerString2" />
</androidx.constraintlayout.widget.ConstraintLayout>